{
    "name": "alleyinteractive/simple-laravel-roles",
    "description": "Simple PHP-based permissions in Laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Boynes",
            "email": "mboynes@alley.co",
            "homepage": "https://www.alley.co/"
        }
    ],
    "homepage": "https://github.com/alleyinteractive/simple-laravel-roles",
    "keywords": ["Laravel", "roles", "permissions"],
    "require": {
        "illuminate/support": "~7|~8"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "orchestra/testbench": "~5|~6"
    },
    "autoload": {
        "psr-4": {
            "Alley\\SimpleRoles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alley\\SimpleRoles\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alley\\SimpleRoles\\SimpleRolesServiceProvider"
            ],
            "aliases": {
                "SimpleRoles": "Alley\\SimpleRoles\\Facades\\SimpleRoles"
            }
        }
    }
}
